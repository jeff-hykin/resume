{
    "manifest_version": 2,
    "name": "ResearchRecorder",
    "version": "1.0",
    "description": "Lets you keep track of what you searched",
    "permissions": [
        "activeTab",
        "sessions",
        "storage"
    ],
    "browser_action": {
        "default_icon": "icons/beasts-32.png",
        "default_title": "ResearchRecorder",
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content_scripts/main.js"
            ]
        }
    ]
}